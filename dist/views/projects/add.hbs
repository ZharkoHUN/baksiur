<div class="container p-4 h-100">
  <div class="row h-75 d-flex align-items-center">
    <div class="col-md-4 mx-auto">
      <div class="card bg-dark">
        <form action="/projects/add" method="POST" class="card-body">

          {{! Title and save button }}
          <div class="d-flex justify-content-between align-items-center mb-3">
            <h1 class="text-light mb-3 h4">Új project hozzáadása</h1>
            <button class="btn btn-success btn-block">
              Mentés
            </button>
          </div>
          <label for="name">Név:</label>
          <input
            type="text"
            name="name"
            class="form-control bg-dark text-light mb-3"
            placeholder="Project neve"
            autocomplete="off"
          />
          <label for="contact">Helyszín:</label>
          <input
            type="text"
            name="contact"
            class="form-control bg-dark text-light mb-3"
            placeholder="Helyszín"
          />
          <label for="description">Leírás</label>
          <textarea
            name="description"
            class="form-control bg-dark text-light mb-3"
            placeholder="Leírás"
            autofocus
          /></textarea>


          <label for="date">Határidő:</label>
          <input
            id="dater"
            type="date"
            name="expire"
            class="form-control bg-dark text-light mb-3"
          />
          <script>
            let plusDays = (((60*1000)*60)*24)*180;
            document.getElementById('dater').valueAsDate = new Date(Date.now() + plusDays);
          </script>
          
          <label for="reward">Ár:</label>
          <input
            type="text"
            name="reward"
            class="form-control bg-dark text-light mb-3"
            placeholder="Ár"
          />
        </form>
      </div>
    </div>

  </div>
</div>