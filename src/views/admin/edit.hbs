<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card bg-dark border border-dark">
        <div class="card-body">
          <form action="/admin/edit/{{admin.id}}" method="POST">
            <div class="form-group">
              <input
                type="text"
                name="username"
                class="form-control bg-dark text-light"
                placeholder="Felhasználónév"
                value="{{admin.username}}"
                autofocus
              />
            </div>
            <div class="form-group">
              <input
                type="text"
                name="fullname"
                class="form-control bg-dark text-light"
                placeholder="Teljes név"
                value="{{admin.fullname}}"
                autofocus
            />
            </div>
            <div class="form-group">
              <textarea
                name="contact"
                rows="2"
                class="form-control bg-dark text-light"
                placeholder="Címe"
              >{{admin.contact}}</textarea>
            </div>
            <div class="form-group">
              <input
                type="text"
                name="phone"
                class="form-control bg-dark text-light"
                placeholder="Telefonszám"
                value="{{admin.phone}}"
              />
            </div>
            <div class="form-group">
              <input
                type="text"
                name="email"
                class="form-control bg-dark text-light"
                placeholder="Email cím"
                value="{{admin.email}}"
              />
            </div>
            <div class="form-group">
              <input
                type="text"
                name="webpage"
                class="form-control bg-dark text-light"
                placeholder="Weboldal"
                value="{{admin.webpage}}"
              />
            </div>
            <div class="form-group">
              <label for="admin" style='color:rgb(224, 19, 19)'>Admin: </label>
              <input name='admin' type="checkbox" id="adminCheck" {{#if_eq admin.admin 1}} checked {{/if_eq}}>
            </div>
            <div class="form-group">
              <button class="btn btn-success btn-block">
                Mentés
              </button>
              <a href="/admin">
                <button type="button" class="btn btn-warning btn-block">
                    Mégse
                </button>
              </a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>