<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card bg-dark border border-dark">
        <div class="card-body">
          <form action="/links/edit/{{link.id}}" method="POST">
            <div class="form-group">
              <input
                type="text"
                name="title"
                class="form-control bg-dark text-light"
                placeholder="Cím"
                value="{{link.title}}"
                autofocus
              />
            </div>
            <div class="form-group">
              <h7 class="text-light mb-3 h7">Típus</h7>
                <label for="type">Típus</label>
                <select name="type">
                  {{#if_eq link.type "bevétel"}}
                    <option value="kiadás">Kiadás</option>
                    <option value="bevétel" selected="selected">Bevétel</option>
                  {{else}}
                    <option value="kiadás" selected="selected">Kiadás</option>
                    <option value="bevétel">Bevétel</option>
                  {{/if_eq}}
                  
                </select>
            </div>
            <div class="form-group">
              <input
                type="text"
                name="url"
                class="form-control bg-dark text-light"
                placeholder="Összeg"
                value="{{link.url}}"
              />
            </div>
            <div class="form-group">
              <textarea
                name="description"
                rows="2"
                class="form-control bg-dark text-light"
                placeholder="Megjegyzés"
              >{{link.description}}</textarea>
            </div>
            <div class="form-group">
              <button class="btn btn-success btn-block">
                Mentés
              </button>
              <a href="/links">
                <button type="button" class="btn btn-warning btn-block">
                    Mégse
                </button>
              </a>
            </div>
            
          </form>
          
        </div>
      </div>
    </div>
  </div>
</div>